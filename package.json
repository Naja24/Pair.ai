{
  "name": "pair.ai",
  "private": true,
  "workspaces": [
    "packages/ai-engine",
    "packages/client",
    "packages/server"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:ai-engine": "cd packages/ai-engine && npm run dev || echo \"(no dev script)\"",
    "dev:client": "cd packages/client && npm run dev",
    "dev:server": "cd packages/server && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}
